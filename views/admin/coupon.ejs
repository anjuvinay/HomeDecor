<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Home Decor</title>
    <!-- Template CSS -->
    <link href="/assetsb/css/main.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css" />
    <style>
        .coupon-code {
            font-size: 1rem; 
            font-weight: bold;
            color: #007bff; 
        }
    </style>
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>

<body>
    <div class="screen-overlay"></div>
    <%- include('leftnav') %>
    <main class="main-wrap">
        <%- include('header') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Coupon management </h2>
                    <p>Add or edit coupon</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form id="couponForm" action="/admin/addCoupon" method="post" onsubmit="return validateForm()">
                                <div class="mb-4">
                                    <label for="couponCode" class="form-label">Coupon Code</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="couponCode" name="couponCode" required/>
                                    <span class="text-danger" id="couponCodeError"></span>
                                </div>
                                <div class="mb-4">
                                    <label for="discount" class="form-label">Discount Amount</label>
                                    <input type="number" placeholder="Type here" class="form-control" id="discount" name="discount" required/>
                                    <span class="text-danger" id="discountError"></span>
                                </div>
                                <div class="mb-4">
                                    <label for="minPurchase" class="form-label">Minimum Purchase</label>
                                    <input type="number" placeholder="Type here" class="form-control" id="minPurchase" name="minPurchase" required/>
                                    <span class="text-danger" id="minPurchaseError"></span>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Expiry Date</label>
                                    <input type="date" name="expiry" required id="expiry" min="" />
                                    <span class="text-danger" id="expiryError"></span>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Create Coupon</button>
                                </div>
                            </form>
                            <script>
                                // Set the minimum date to the current date using Date.now()
                                document.getElementById("expiry").min = new Date().toISOString().split('T')[0];
                                
                                // Convert coupon code to uppercase
                                document.getElementById('couponCode').addEventListener('input', function(event) {
                                    this.value = this.value.toUpperCase();
                                });

                                function validateForm() {
                                    let valid = true;

                                    // Get form values
                                    let couponCode = document.getElementById("couponCode").value;
                                    let discount = parseFloat(document.getElementById("discount").value);
                                    let minPurchase = parseFloat(document.getElementById("minPurchase").value);
                                    let expiry = document.getElementById("expiry").value;

                                    // Clear previous error messages
                                    document.getElementById("couponCodeError").innerText = "";
                                    document.getElementById("discountError").innerText = "";
                                    document.getElementById("minPurchaseError").innerText = "";
                                    document.getElementById("expiryError").innerText = "";

                                    // Coupon Code validation
                                    if (couponCode === "" || !/^[A-Za-z].*$/.test(couponCode) || couponCode.length < 2) {
                                        document.getElementById("couponCodeError").innerText = "Invalid coupon code. It should start with a character and be at least 2 characters long.";
                                        valid = false;
                                    }

                                    // Discount Amount validation
                                    if (isNaN(discount) || discount <= 0) {
                                        document.getElementById("discountError").innerText = "Discount amount should be a positive value.";
                                        valid = false;
                                    }

                                    // Minimum Purchase validation
                                    if (isNaN(minPurchase) || minPurchase <= 0) {
                                        document.getElementById("minPurchaseError").innerText = "Minimum purchase amount should be a positive value.";
                                        valid = false;
                                    }

                                    // Minimum Purchase should be greater than Discount Amount
                                    if (minPurchase <= discount) {
                                        document.getElementById("minPurchaseError").innerText = "Minimum purchase amount should be greater than discount amount.";
                                        valid = false;
                                    }

                                    // Expiry Date validation
                                    if (new Date(expiry) < new Date()) {
                                        document.getElementById("expiryError").innerText = "Expiry date should be either current date or a future date.";
                                        valid = false;
                                    }

                                    return valid;
                                }
                            </script>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table id="couponTable" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Index</th>
                                            <th>Coupon Code</th>
                                            <th>Discount</th>
                                            <th>Minimum Purchase</th>
                                            <th>Expiry</th>
                                            <th>Coupon Status</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (i = 0; i < coupon.length; i++) { %>
                                        <tr>
                                            <td><b><%= i + 1 %></b></td>
                                            <td class="text-brand coupon-code"><%= coupon[i].couponCode %></td>
                                            <td><b><%= coupon[i].discount %></b></td>
                                            <td><%= coupon[i].minPurchase %></td>
                                            <% var formattedDate = coupon[i].expiry.toLocaleDateString('en-US', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric'
                                            }); %>
                                            <td><%= formattedDate %></td>
                                            <% if (coupon[i].is_active) { %>
                                            <td class="alert-success text-success">Active</td>
                                            <% } else { %>
                                            <td class="alert-danger text-danger">Blocked</td>
                                            <% } %>
                                            <td class="text-end">
                                                <a class="button button-gradient1" href="/admin/deleteCoupon?id=<%= coupon[i]._id %>">Delete</a>
                                            </td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
        <%- include('footer') %>
    </main>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <script src="/assetsb/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsb/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsb/js/vendors/select2.min.js"></script>
    <script src="/assetsb/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsb/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <!-- Main Script -->
    <script src="/assetsb/js/main.js" type="text/javascript"></script>
    <script>
        $(document).ready(function() {
            $('#couponTable').DataTable();
        });

        // Check if there's a message and display the SweetAlert
        <% if (message) { %>
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '<%= message %>',
            });
        <% } %>
    </script>
</body>
</html>
