<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Home Decor</title>
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap5.min.css">
    <!-- Template CSS -->
    <link href="/assetsb/css/main.css" rel="stylesheet" type="text/css" />
    <!-- Custom CSS for table lines -->
    <style>
        table.dataTable tbody tr,
        table.dataTable tbody td {
            border-bottom: 1px solid #ddd;
        }
        table.dataTable {
            border-collapse: collapse;
        }
    </style>
</head>

<body>
    <div class="screen-overlay"></div>
    <%- include('leftnav') %>
    <main class="main-wrap">
        <%- include('header') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table mt-5" id="productTable">
                            <thead>
                                <tr>
                                    <th scope="col">Index</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Product</th>
                                    <th scope="col">MRP</th>
                                    <th scope="col">Sale Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach((product, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <a class="itemside" href="#">
                                            <div class="left">
                                                <img src="/<%= product.image[0] %>" class="img-sm img-thumbnail" alt="Item" style="height: 5rem; width: 5rem;">
                                            </div>
                                        </a>
                                    </td>
                                    <td><%= product.title %></td>
                                    <td><%= product.regularPrice %></td>
                                    <td><%= product.salePrice %></td>
                                    <td><%= product.quantity %></td>
                                    <% if (product.is_active) { %>
                                        <td><span class="badge rounded-pill alert-success">Active</span></td>
                                    <% } else { %>
                                        <td><span class="badge rounded-pill alert-danger">Blocked</span></td>
                                    <% } %>
                                    <td class="text-end">
                                        <% if (product.is_active) { %>
                                            <a onclick="sweet('<%= product._id %>')" class="button button-gradient1" style="color: white;">
                                                <i class="material-icons "></i> Block
                                            </a>&nbsp;
                                        <% } else { %>
                                            <a onclick="sweetAlert('<%= product._id %>')" class="button button-gradient" style="color: white;">
                                                <i class="material-icons "></i> Unblock
                                            </a>&nbsp;
                                        <% } %>
                                        <a href="/admin/editProductList?id=<%= product._id %>" class="button button-gradient" style="color: white;">
                                            <i></i> Edit
                                        </a>&nbsp;
                                        <a onclick="sweetAlert1('<%= product._id %>')" class="button button-gradient1" style="color: white;">
                                            <i class="material-icons "></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function sweet(productId) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to block Product!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Block Product!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Blocked!",
                            text: "Product has been blocked.",
                            icon: "success"
                        }).then((res) => {
                            if (res.isConfirmed) {
                                // Redirect after the second confirmation
                                window.location.href = `blockProductList?productId=${productId}&act=0`;
                            }
                        });
                    }
                });
            }

            function sweetAlert(productId) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to Unblock Product!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, UnBlock Product!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "UnBlocked!",
                            text: "Product has been Unblocked.",
                            icon: "success"
                        }).then((res) => {
                            if (res.isConfirmed) {
                                // Redirect after the second confirmation
                                window.location.href = `unBlockProductList?productId=${productId}&act=1`;
                            }
                        });
                    }
                });
            }
        </script>
        <script>

            function sweetAlert1(productId) {
                
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to Delete Product!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Delete Product!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Deleted!",
                            text: "Product has been Deleted.",
                            icon: "success"
                        }).then((res) => {
                            if (res.isConfirmed) {
                                // Redirect after the second confirmation
                                window.location.href = `deleteProduct?productId=${productId}&act=2`;
                            }
                        });
                    }
                });
            }
        </script>
        <%- include('footer') %>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#productTable').DataTable({
                "paging": true,         // Enable pagination
                "searching": true,      // Enable search
                "ordering": true,       // Enable sorting
                "order": []             // Disable initial sorting
            });
        });
    </script>
    <script src="/assetsb/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsb/js/vendors/select2.min.js"></script>
    <script src="/assetsb/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsb/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assetsb/js/main.js" type="text/javascript"></script>
</body>
