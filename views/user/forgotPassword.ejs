<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Home Decor</title>
    <!-- Template CSS -->
    <link href="assetsb/css/main.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/styles.css" rel="stylesheet" type="text/css" />
   
</head>

<body>
    <%- include('userHeader') %>
    <main>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Password Recovery</h4>
                    <form action="/forgotPassword" method="post">
                        <% if (locals.message) { %>
                            <span class="text-danger"><%= message %></span>
                        <% } %>
                        <div class="mb-3">
                            <input class="form-control" placeholder="Email" type="text" name="email" required>
                        </div>
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100">Get OTP</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
    <script src="assetsb/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assetsb/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assetsb/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="assetsb/js/main.js" type="text/javascript"></script>
</body>
</html>
