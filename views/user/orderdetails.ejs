    <main class="text-center">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order Detail</h2>
                    <p>Details for Order ID: ORD<%= orders.orderId %></p>
                </div>
            </div>
            <div class="card text-center">
                <header class="card-header text-center">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                            <span>
                                <i class="material-icons md-calendar_today"></i> 
                                <b><%= new Intl.DateTimeFormat('en-IN', { day: '2-digit', month: '2-digit', year: 'numeric' }).format(new Date(orders.orderDate)) %></b>
                                
                               
                            </span> <br>
                            <small class="text-muted">Order ID: ORD<%= orders.orderId %></small>
                        </div>
                        <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                            <button class="btn btn-secondary print ms-2" id="printScreen"><i
                                    class="icon material-icons md-print"></i></button>
                        </div>
                        <script>
                            const printid = document.getElementById('printScreen')
                            printid.addEventListener('click', function () {
                                window.print()
                            })
                        </script>
                    </div>
                </header>

                <div class="card-body">
                    <div class="row mb-50 mt-20 order-info-wrap">
                        <div class="col-md-3">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-person"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Customer</h6>
                                    <p class="mb-1">
                                        <%= orders.userId.name %> <br>
                                        <%= orders.userId.mobile %>
                                    </p>
                                </div>
                            </article>
                        </div>
                        <div class="col-md-3">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Payment Info</h6>
                                    <p class="mb-1">
                                        Pay method: <%= orders.paymentMethod %> <br>
                                        Payment Status: <% if (orders.paymentStatus === 'Success') { %>
                                            <span class="text-success"><%= orders.paymentStatus %></span>
                                        <% } else { %>
                                            <span class="text-danger"><%= orders.paymentStatus %></span>
                                        <% } %>
                                    </p>
                                </div>
                            </article>
                        </div>
                        <div class="col-md-3">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Deliver To</h6>
                                    <p class="mb-1">
                                        <%= orders.shippingAddress.housename %> <br>
                                        <%= orders.shippingAddress.city %> <br>
                                        <%= orders.shippingAddress.state %> <br>
                                        <%= orders.shippingAddress.pincode %>
                                    </p>
                                </div>
                            </article>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="20%">Product</th>
                                            <th width="20%">MRP</th>
                                            <th width="20%">Offer Price</th>
                                            <th width="20%">Quantity</th>
                                            <th width="20%">Total</th>
                                            <th width="20%">Status</th>
                                            <th width="20%">Action</th>
                                            <th width="20%">Review</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let i = 0; i < orders.products.length; i++) { %>
                                            <tr>
                                                <td>
                                                    <a class="itemside" href="#">
                                                        <div class="left">
                                                            <img src="/<%= orders.products[i].productId.image[0] %>" width="40" height="40" class="img-xs" alt="Item">
                                                        </div>
                                                        <div class="info">
                                                            <%= orders.products[i].productId.title %>
                                                        </div>
                                                    </a>
                                                </td>
                                               
                                                <td><%= orders.products[i].regularPrice %></td>
                                                <td><%= orders.products[i].salePrice.toFixed(2) %></td>
                                                <td><%= orders.products[i].quantity %></td>
                                                <td><%= (orders.products[i].salePrice * orders.products[i].quantity).toFixed(2) %></td>
                                                <td>
                                                    <% if (orders.products[i].status == 'Cancelled' || orders.products[i].status== 'Returned') { %>
                                                        <span class="text-danger"><%= orders.products[i].status %></span>
                                                    <% } else { %>
                                                        <span class="text-success"><%= orders.products[i].status %></span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (orders.products[i].status !== 'Cancelled' && orders.products[i].status !== 'Returned' && orders.products[i].status !== 'Return requested') { %>
                                                        <% if (orders.products[i].status === 'Delivered') { %>
                                                            <a class="btn btn-danger" data-toggle="modal" data-target="#returnModal" onclick="setReturnProduct('<%= orders._id %>', '<%= orders.products[i].productId._id %>')">Return</a>
                                                        <% } else { %>
                                                            <a class="btn btn-primary" onclick="cancelProduct('<%= orders._id %>', '<%= orders.products[i].productId._id %>')">Cancel</a>
                                                        <% } %>
                                                    <% } else { %>
                                                        <span class="text-muted"><%= orders.products[i].status %></span>
                                                    <% } %>
                                                </td>
                                                <% if (orders.products[i].status === 'Delivered') { %>
                                               
                                                    <td>
                                                        <a class="btn btn-secondary create-review-btn"
                                                        data-toggle="modal"
                                                        data-target="#createReviewModal"
                                                        data-product-id="<%= orders.products[i].productId._id %>"
                                                        onclick="setModalProductId('<%= orders.products[i].productId._id %>')">
                                                        Write a Review
                                                    </a>
                                                    
                                                    </td>

                                                    <script>
                                                        function setModalProductId(productId) {
                                                            // Set the value of the hidden input field
                                                            console.log(productId)
                                                            document.getElementById('modalProductId').value = productId;
                                                        }
                                                    
                                                        // ... (other JavaScript code)
                                                    </script>
                                                    

                                                    <%}%>
                                            </tr>
                                        <% } %>
                                        <tr>
                                            
                                            <td colspan="6">
                                                <article class="float-end">
                                                    <% if (orders.coupon != null) { %>
                                                        <dl class="dlist">
                                                            <dt>Coupon:</dt>
                                                            <dd>Applied( -<span class="text-success"><%= orders.coupon %></span> )</dd>
                                                        </dl>
                                                    <% } %>
                                                    <dl class="dlist">
                                                        <dt> Total MRP:</dt>
                                                        <dd><%= orders.originalTotal.toFixed(2) %></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>You saved:</dt>
                                                        <dd><%= orders.discountTotal.toFixed(2) %></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Discount Percentage:</dt>
                                                        <dd><%= orders.totalDiscountPercentage.toFixed(2) %>%</dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Shipping cost:</dt>
                                                        <dd><%= orders.shipping.toFixed(0) %></dd>
                                                    </dl>
                                                    <% if (orders.totalAmount !== 0) { %>
                                                    <dl class="dlist">
                                                        <dt>Grand total:</dt>
                                                        <dd><b class="h5"><%= orders.totalAmount %></b></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Purchased:</dt>
                                                        <dd><b class="h5">₹<%=orders.adminTotal%></b></dd>
                                                    </dl>
                                                    <% } else { %>
                                                        <h5>Order cancelled</h5>
                                                    <% } %>
                                                    <dl class="dlist">
                                                        <dt class="text-muted">Status:</dt>
                                                        <dd>
                                                            <% if (orders.paymentStatus === 'Success') { %>
                                                                <span class="badge rounded-pill alert-success text-success"><%= orders.paymentStatus %></span>
                                                            <% } else { %>
                                                                <span class="badge rounded-pill alert-danger text-danger"><%= orders.paymentStatus %></span>
                                                            <% } %>
                                                        </dd>
                                                     
                                                    </dl>
                                                    <% if (orders.paymentMethod === 'Razorpay' && orders.paymentStatus === 'Pending') { %>
                                                    
                                                       <a class="btn btn-primary mt-2" href="/payment?orderId=<%= orders._id %>">Pay Now</a>
                                                        <% } %>
                                                </article>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Return Product Modal -->
    <div class="modal fade" id="returnModal" tabindex="-1" role="dialog" aria-labelledby="returnModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="returnProductForm" method="POST" action="/returnProduct">
                    <div class="modal-header">
                        <h5 class="modal-title" id="returnModalLabel"><i class="fa fa-undo-alt"></i> Return Product</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="returnOrderId" name="orderId">
                        <input type="hidden" id="returnProductId" name="productId">
                        <div class="form-group">
                            <label for="returnReason"><i class="fa fa-pencil-alt"></i> Reason for Return</label>
                            <textarea class="form-control" id="returnReason" name="returnReason" placeholder="Please describe the reason for returning this product..." rows="4" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
                        <button type="submit" class="btn btn-danger"><i class="fa fa-check"></i> Submit Return</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

